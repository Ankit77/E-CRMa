<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actionbar_bg"
        android:contentInsetEnd="0dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:theme="@style/ThemeOverlay.MyApp.ActionBar"
        app:contentInsetStart="0dp"></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/fragment_visit_detail_tvLblCompnayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvCompnayName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_box"
                android:gravity="center|left"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvLbllocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Location"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvlocation"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_box"
                android:gravity="left|center"
                android:padding="10dip"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvLblContactPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Contact Person"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvContactPerson"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_box"
                android:gravity="left|center"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvlblDiscussion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Discussion"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size"
                 />

            <EditText
                android:id="@+id/fragment_visit_detail_etDiscussion"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_box"
                android:gravity="left|center"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvlblPurposeofvisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Purpose of Visit"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size"
                 />

            <LinearLayout
                android:id="@+id/fragment_visit_detail_llPurposeofvisit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_box"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/fragment_visit_detail_tvPurposeofvisit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fragment_visit_detail_spnrPurposeofvisit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_visit_detail_tvlblNextAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Next Action"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size"
                 />

            <LinearLayout
                android:id="@+id/fragment_visit_detail_llNextAction"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_box"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/fragment_visit_detail_tvNextAction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fragment_visit_detail_spnrNextAction"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_visit_detail_tvlblDateNextAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Date of NextAction "
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size"
                 />

            <TextView
                android:id="@+id/fragment_visit_detail_tvDateNextAction"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_box"
                android:gravity="center|left"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                 />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:text="CheckIN Info"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_border"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/fragment_visit_detail_tvcheckInImage"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_visit_detail_tvcheckInLatlong"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/fragment_visit_detail_tvcheckinTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:text="CheckOut Info"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_border"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/fragment_visit_detail_tvcheckOutImage"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_visit_detail_tvcheckOutLatlong"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/fragment_visit_detail_tvcheckOutTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/fragment_visit_detail_btnSendtoServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="@color/text_white"
                    android:shadowDx="-1"
                    android:shadowDy="1"
                    android:shadowRadius="0.04"
                    android:text="Send to Server"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/fragment_visit_detail_btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="@color/text_white"
                    android:shadowDx="-1"
                    android:shadowDy="1"
                    android:shadowRadius="0.04"
                    android:text="Save"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/fragment_visit_detail_btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="@color/text_white"
                    android:shadowDx="-1"
                    android:shadowDy="1"
                    android:shadowRadius="0.04"
                    android:text="Cancel"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>