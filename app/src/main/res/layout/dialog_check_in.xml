<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size" />

            <TextView
                android:id="@+id/dialog_check_in_tvCompanyName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Location"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size" />

            <TextView
                android:id="@+id/dialog_check_in_tvLocation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Contact Person"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size" />


            <TextView
                android:id="@+id/dialog_check_in_tvContactPerson"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/register_edit_top_margin"
                android:background="@android:color/white"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Discussion"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size" />

            <EditText
                android:id="@+id/dialog_check_in_etDiscussion"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/register_edit_top_margin"
                android:background="@drawable/edit_box"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Purpose of Visit"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:background="@drawable/edit_box_drop_sel"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/dialog_check_in_tvPurposeofvisit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/dialog_check_in_spnrPurposeofvisit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Next Action"
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:background="@drawable/edit_box_drop_sel"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/dialog_check_in_tvNextAction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/dialog_check_in_spnrNextAction"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/dialog_check_in_tvlabelDateNextAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:text="Date of NextAction "
                android:textColor="@color/edit_text_color_blue"
                android:textSize="@dimen/register_textview_size" />


            <TextView
                android:id="@+id/dialog_check_in_tvDateNextAction"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/register_text_top_margin"
                android:background="@android:color/white"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/register_button_top_margin"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/dialog_check_in_btnSendtoserver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="@color/text_white"
                    android:shadowDx="-1"
                    android:shadowDy="1"
                    android:shadowRadius="0.04"
                    android:text="Send to Server"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/dialog_check_in_btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="@color/text_white"
                    android:shadowDx="-1"
                    android:shadowDy="1"
                    android:shadowRadius="0.04"
                    android:text="Save"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>