<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <View
        android:id="@+id/row_visi_reportlist_checkStatusBar"
        android:layout_width="5dip"
        android:layout_height="fill_parent"
        android:background="@drawable/highlight_list_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_border"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/row_visi_reportlist_tvCompany"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:text="sdsdsd"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_visi_reportlist_tvStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkStatusType"
            android:text="sdsdss"
            android:textColor="@color/text_white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkStatusType"
            android:text="CheckIn : "
            android:textColor="@color/text_white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/row_visi_reportlist_tvCheckInLatLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkServerStatus"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="sdsdsd"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/row_visi_reportlist_tvCheckInTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="ssdsd"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkStatusType"
            android:text="CheckOut : "
            android:textColor="@color/text_white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/row_visi_reportlist_tvCheckoutLatLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkSync"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="sdsd"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/row_visi_reportlist_tvCheckOutTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checklatLng"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="sdsdss"
            android:textColor="@color/text_white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>